	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "cppdbg",
			"request": "launch",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"linux": {
				"program": "${workspaceRoot}/voxel",
				"MIMode": "lldb"
			},
			"osx": {
				"program": "${workspaceRoot}/voxel.app/Contents/MacOS/voxel",
				"MIMode": "lldb",
			},
			"windows": {
				"miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
				"MIMode": "gdb",
				"program": "${workspaceRoot}/voxel.exe",
			},
		}
	]
